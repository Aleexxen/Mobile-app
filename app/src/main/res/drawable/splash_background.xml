<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">

    <!-- background color -->
    <item android:drawable="@color/colorBackground" />

    <!-- item for logo -->
    <item
        android:bottom="150dp"
        android:width="300dp"
        android:height="230dp"
        android:drawable="@drawable/dark_logo"
        android:gravity="center" />

    <!-- item for text -->
    <item
        android:top="180dp"
        android:width="300dp"
        android:height="40dp"
        android:drawable="@drawable/text"
        android:gravity="center"/>

</layer-list>